<Window x:Name="Main" x:Class="SolsRNG.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SolsRNG"
        mc:Ignorable="d"
        Title="AVeemos RNG" Height="450" Width="450" Background="#FF333333" ResizeMode="CanMinimize" Icon="/appicon.ico">
    <Grid>
        <Button x:Name="RollButton" Content="Roll" HorizontalAlignment="Center" Margin="0,287,0,0" Width="358" Height="85" VerticalAlignment="Top" Background="{x:Null}" BorderBrush="White" FontSize="36" FontFamily="Arial Black" Foreground="White" BorderThickness="4,4,4,4" ClickMode="Press" Click="RollAura">
            <Button.Resources>
                <Style TargetType="Border">
                    <Setter Property="CornerRadius" Value="25"/>
                </Style>
            </Button.Resources>
        </Button>
        <Grid Margin="0,0,0,287" x:Name="rollGrid">
            <Label x:Name="AuraText" Content="None" HorizontalAlignment="Center" Height="112" Margin="0,10,0,0" VerticalAlignment="Top" Width="278" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Foreground="White" FontWeight="Bold" FontFamily="Arial Black" FontSize="48"/>
            <Label x:Name="Chance" Content="1 in 1" HorizontalAlignment="Center" Height="43" Margin="0,85,0,0" VerticalAlignment="Top" Width="278" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Foreground="White" FontFamily="Arial" FontSize="24"/>
            <Grid.RenderTransform>
                <TranslateTransform x:Name="trans" Y="0"/>
            </Grid.RenderTransform>
            <Grid.Resources>
                <Storyboard x:Key="ShuffleAnimation">
                    <DoubleAnimation Storyboard.TargetName="trans"
                             Storyboard.TargetProperty="Y"
                             From="-15" To="0" Duration="0:0:0.15" />
                </Storyboard>
            </Grid.Resources>
        </Grid>
        <Button x:Name="HistoryButton" Content="History" HorizontalAlignment="Left" Height="70" VerticalAlignment="Top" Width="70" Panel.ZIndex="2" Background="#FF191919" Foreground="White" Padding="0,1,1,1" BorderThickness="2,2,2,2" Click="TogglePanel" Margin="10,10,0,0" SnapsToDevicePixels="True">
            <Button.Resources>
                <Style TargetType="Border">
                    <Setter Property="CornerRadius" Value="15"/>
                </Style>
            </Button.Resources>
        </Button>
        <Button x:Name="AuraViewButton" Content="Auras" HorizontalAlignment="Right" Height="70" VerticalAlignment="Top" Width="70" Panel.ZIndex="2" Background="#FF191919" Foreground="White" Padding="0,1,1,1" BorderThickness="2,2,2,2" Click="TogglePanel" Margin="349,10,0,0" RenderTransformOrigin="0.018,0.504" SnapsToDevicePixels="True">
            <Button.Resources>
                <Style TargetType="Border">
                    <Setter Property="CornerRadius" Value="15"/>
                </Style>
            </Button.Resources>
        </Button>
        <ListView x:Name="PanelView" HorizontalAlignment="Center" Height="403" VerticalAlignment="Top" Width="314" Background="#FF191919" Panel.ZIndex="1" BorderBrush="White" BorderThickness="2,2,2,2" Visibility="Hidden" Foreground="White" FontSize="24" FontWeight="Bold" ScrollViewer.VerticalScrollBarVisibility="Disabled">
            <ListView.Resources>
                <Style TargetType="Border">
                    <Setter Property="CornerRadius" Value="35"/>
                </Style>
            </ListView.Resources>
        </ListView>
        <Label FontSize="20" Margin="0,377,0,0" Foreground="White" Content="H - History | A - Auras | R - Roll" HorizontalContentAlignment="Center" VerticalContentAlignment="Bottom"/>
    </Grid>
</Window>
